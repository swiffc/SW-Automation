<Window x:Class="Installer.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Installer"
        mc:Ignorable="d"
        Title="Solidworks Add-in Installer" Height="161" Width="238">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="3*"/>
            <ColumnDefinition Width="14*"/>
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition Height="15*"/>
            <RowDefinition Height="419*"/>
        </Grid.RowDefinitions>
        <Button Content="Install" HorizontalAlignment="Left" Margin="21,21,0,0" VerticalAlignment="Top" RenderTransformOrigin="1.293,1.057" Grid.Row="1" Height="32" Width="77" Click="Install_Click" Grid.ColumnSpan="2"/>
        <Button Content="Uninstall" HorizontalAlignment="Left" Margin="88,22,0,0" VerticalAlignment="Top" Grid.Row="1" Height="31" Width="82" Click="Uninstall_Click" Grid.Column="1"/>
        <Button Content="Repair/Update" HorizontalAlignment="Left" Margin="12,78,0,0" Grid.Row="1" VerticalAlignment="Top" Height="36" Width="130" Click="RepairUpdate_Click" Grid.Column="1"/>

    </Grid>
</Window>
