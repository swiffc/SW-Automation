<Window x:Class="UnifiedUI.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        mc:Ignorable="d"
        Title="SolidWorks Automation Suite v4.0 - Modern UI" 
        Height="900" Width="1400"
        MinHeight="800" MinWidth="1200"
        WindowStartupLocation="CenterScreen"
        Background="{StaticResource PrimaryBackground}">

    <Window.Resources>
        <!-- 
        =================================================================
        WINDOW-LEVEL STYLES
        =================================================================
        Apply modern theme styles globally, with window-specific overrides
        =================================================================
        -->
        
        <!-- Apply modern theme as base for all controls -->
        <Style TargetType="TextBox" BasedOn="{StaticResource ModernTextBox}"/>
        <Style TargetType="ComboBox" BasedOn="{StaticResource ModernComboBox}"/>
        <Style TargetType="ComboBoxItem" BasedOn="{StaticResource ModernComboBoxItem}"/>
        <Style TargetType="CheckBox" BasedOn="{StaticResource ModernCheckBox}"/>
        <Style TargetType="Label" BasedOn="{StaticResource ModernLabel}"/>
        <Style TargetType="TabControl" BasedOn="{StaticResource ModernTabControl}"/>
        <Style TargetType="TabItem" BasedOn="{StaticResource ModernTabItem}"/>
        <Style TargetType="Separator" BasedOn="{StaticResource ModernSeparator}"/>
        <Style TargetType="GroupBox" BasedOn="{StaticResource SectionPanel}"/>
        
        <!-- Header Text Style -->
        <Style x:Key="HeaderStyle" TargetType="TextBlock">
            <Setter Property="FontSize" Value="{StaticResource FontSizeL}"/>
            <Setter Property="FontWeight" Value="SemiBold"/>
            <Setter Property="Margin" Value="0,0,0,8"/>
            <Setter Property="Foreground" Value="{StaticResource PrimaryText}"/>
        </Style>
        
        <!-- Legacy compatibility (old key names) -->
        <SolidColorBrush x:Key="DarkBackground" Color="#1E1E1E"/>
        <SolidColorBrush x:Key="DarkPanel" Color="#252526"/>
        <SolidColorBrush x:Key="DarkBorder" Color="#3F3F46"/>
        <SolidColorBrush x:Key="LightText" Color="#E5E7EB"/>
        <SolidColorBrush x:Key="MutedText" Color="#9CA3AF"/>
        <SolidColorBrush x:Key="AccentBlue" Color="#0078D4"/>
    </Window.Resources>

    <DockPanel Background="{StaticResource DarkBackground}">
        <!-- Menu Bar -->
        <Menu DockPanel.Dock="Top" Background="{StaticResource DarkPanel}" Foreground="{StaticResource LightText}">
            <MenuItem Header="File" Foreground="{StaticResource LightText}">
                <MenuItem Header="New" Click="NewButton_Click" InputGestureText="Ctrl+N"/>
                <MenuItem Header="Open..." InputGestureText="Ctrl+O"/>
                <MenuItem Header="Save" Click="SaveButton_Click" InputGestureText="Ctrl+S"/>
                <MenuItem Header="Save As..." InputGestureText="Ctrl+Shift+S"/>
                <Separator/>
                <MenuItem Header="Import Excel..." Click="ImportButton_Click"/>
                <MenuItem Header="Import Prego..." Click="ImportPregoButton_Click">
                    <MenuItem.ToolTip>
                        <ToolTip Background="{StaticResource DarkPanel}" Foreground="{StaticResource LightText}">
                            <StackPanel>
                                <TextBlock FontWeight="Bold">Import from Prego Excel File</TextBlock>
                                <TextBlock>Auto-locates Prego file from project output folder</TextBlock>
                                <TextBlock Text="Expected: C:\Users\DCornealius\CascadeProjects\Solidworks_Automation\output\{Job}\Drafting\Headers\~Archive\{Job}-prego{Bank}.xlsm"/>
                                <TextBlock Margin="0,5,0,0">Imports 200+ fields automatically</TextBlock>
                                <TextBlock Margin="0,5,0,0" FontStyle="Italic">See: docs/User_Guide/PREGO_IMPORT_USER_GUIDE.md</TextBlock>
                            </StackPanel>
                        </ToolTip>
                    </MenuItem.ToolTip>
                </MenuItem>
                <MenuItem Header="Export to Excel..." Click="ExportButton_Click"/>
                <Separator/>
                <MenuItem Header="Exit" InputGestureText="Alt+F4"/>
            </MenuItem>
            <MenuItem Header="Edit" Foreground="{StaticResource LightText}">
                <MenuItem Header="Undo" InputGestureText="Ctrl+Z"/>
                <MenuItem Header="Redo" InputGestureText="Ctrl+Y"/>
                <Separator/>
                <MenuItem Header="Clear Configuration"/>
            </MenuItem>
            <MenuItem Header="View" Foreground="{StaticResource LightText}">
                <MenuItem Header="Show Preview Panel" IsCheckable="True" IsChecked="True"/>
                <MenuItem Header="Show Validation Panel" IsCheckable="True" IsChecked="True"/>
                <MenuItem Header="Show Advanced Options" IsCheckable="True"/>
            </MenuItem>
            <MenuItem Header="Tools" Foreground="{StaticResource LightText}">
                <MenuItem Header="Job Browser..."/>
                <MenuItem Header="Standards Library..."/>
                <MenuItem Header="Template Manager..."/>
                <Separator/>
                <MenuItem Header="Options..."/>
            </MenuItem>
            <MenuItem Header="Templates" Foreground="{StaticResource LightText}">
                <MenuItem Header="Save as Template..."/>
                <MenuItem Header="Load Template..."/>
                <MenuItem Header="Manage Templates..."/>
            </MenuItem>
            <MenuItem Header="Help" Foreground="{StaticResource LightText}">
                <MenuItem Header="Documentation"/>
                <MenuItem Header="Video Tutorials"/>
                <MenuItem Header="About..."/>
            </MenuItem>
        </Menu>

        <!-- Toolbar -->
        <ToolBar DockPanel.Dock="Top" Height="40" Background="{StaticResource DarkPanel}">
            <Button Name="NewButton" Click="NewButton_Click" ToolTip="New Configuration">
                <StackPanel Orientation="Horizontal">
                    <TextBlock Text="New" Foreground="{StaticResource LightText}"/>
                </StackPanel>
            </Button>
            <Button Name="SaveButton" Click="SaveButton_Click" ToolTip="Save Configuration">
                <StackPanel Orientation="Horizontal">
                    <TextBlock Text="Save" Foreground="{StaticResource LightText}"/>
                </StackPanel>
            </Button>
            <Separator/>
            <Button Name="ImportButton" Click="ImportButton_Click" ToolTip="Import from Excel">
                <StackPanel Orientation="Horizontal">
                    <TextBlock Text="Import" Foreground="{StaticResource LightText}"/>
                </StackPanel>
            </Button>
            <Button Name="ImportPregoButton" Click="ImportPregoButton_Click">
                <Button.ToolTip>
                    <ToolTip Background="{StaticResource DarkPanel}">
                        <StackPanel MaxWidth="400">
                            <TextBlock FontWeight="Bold" FontSize="14" Margin="0,0,0,5" Foreground="{StaticResource LightText}">Import from Prego Excel File</TextBlock>
                            <TextBlock TextWrapping="Wrap" Margin="0,0,0,5" Foreground="{StaticResource LightText}">Automatically locates and imports data from Prego Excel file stored in project output folder</TextBlock>
                            <TextBlock TextWrapping="Wrap" FontStyle="Italic" FontSize="11" Foreground="{StaticResource MutedText}">Expected: C:\Users\DCornealius\CascadeProjects\Solidworks_Automation\output\{Job}\Drafting\Headers\~Archive\{Job}-prego{Bank}.xlsm</TextBlock>
                            <Separator Margin="0,5"/>
                            <TextBlock FontWeight="SemiBold" Foreground="{StaticResource LightText}">Imports 200+ fields:</TextBlock>
                            <TextBlock Foreground="{StaticResource LightText}">- Job information</TextBlock>
                            <TextBlock Foreground="{StaticResource LightText}">- Bundle dimensions</TextBlock>
                            <TextBlock Foreground="{StaticResource LightText}">- Tube layout and specs</TextBlock>
                            <TextBlock Foreground="{StaticResource LightText}">- Header configurations</TextBlock>
                            <Separator Margin="0,5"/>
                            <TextBlock FontSize="10" Foreground="{StaticResource MutedText}">See: docs/User_Guide/PREGO_IMPORT_USER_GUIDE.md</TextBlock>
                        </StackPanel>
                    </ToolTip>
                </Button.ToolTip>
                <StackPanel Orientation="Horizontal">
                    <TextBlock Text="Import Prego" Foreground="{StaticResource LightText}"/>
                </StackPanel>
            </Button>
            <Button Name="ExportButton" Click="ExportButton_Click" ToolTip="Export to Excel">
                <StackPanel Orientation="Horizontal">
                    <TextBlock Text="Export" Foreground="{StaticResource LightText}"/>
                </StackPanel>
            </Button>
            <Separator/>
            
            <!-- Enhanced Template Section -->
            <StackPanel Orientation="Horizontal" VerticalAlignment="Center" Margin="10,0">
                <TextBlock Text="??" FontSize="16" VerticalAlignment="Center" Margin="0,0,8,0"/>
                <TextBlock Text="Template:" 
                           VerticalAlignment="Center" 
                           FontWeight="SemiBold"
                           FontSize="13"
                           Foreground="{StaticResource LightText}"/>
            </StackPanel>
            
            <!-- Redesigned Template ComboBox -->
            <ComboBox Name="TemplateComboBox" 
                      Width="280" 
                      Height="32"
                      SelectionChanged="TemplateComboBox_SelectionChanged"
                      ItemsSource="{Binding AvailableTemplates}"
                      DisplayMemberPath="Name"
                      Style="{StaticResource ModernComboBox}"
                      Foreground="{StaticResource PrimaryText}"
                      Background="{StaticResource SecondaryBackground}"
                      BorderBrush="{StaticResource PrimaryAccent}"
                      BorderThickness="1"/>
            
            
            <Separator/>
            
            <!-- Enhanced Search Section -->
            <StackPanel Orientation="Horizontal" VerticalAlignment="Center" Margin="10,0">
                <TextBlock Text="??" FontSize="16" VerticalAlignment="Center" Margin="0,0,8,0"/>
                <TextBlock Text="Search:" 
                           VerticalAlignment="Center" 
                           FontWeight="SemiBold"
                           FontSize="13"
                           Foreground="{StaticResource LightText}"/>
            </StackPanel>
            
                            <TextBox Name="SearchBox" 
                     Width="220" 
                     Height="32"
                     TextChanged="SearchBox_TextChanged"
                     ToolTip="Search templates and parameters"
                     Style="{StaticResource ModernTextBox}"
                     Foreground="{StaticResource PrimaryText}"
                     Background="{StaticResource SecondaryBackground}"
                     BorderBrush="{StaticResource PrimaryAccent}"
                     BorderThickness="1"/>
            
            <Separator/>
        </ToolBar>

        <!-- Tool Selector Panel (MODERN) -->
        <Border DockPanel.Dock="Top" Style="{StaticResource ToolSelectorPanel}">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>
                
                <!-- Tool Icon/Label -->
                <StackPanel Grid.Column="0" Orientation="Horizontal" Margin="0,0,16,0">
                    <TextBlock Text="??" FontSize="18" VerticalAlignment="Center" Margin="0,0,8,0"/>
                    <TextBlock Text="Project/Tool" 
                               VerticalAlignment="Center" 
                               FontSize="{StaticResource FontSizeM}" 
                               FontWeight="SemiBold" 
                               Foreground="{StaticResource PrimaryText}"/>
                </StackPanel>
                
                <!-- Tool Selector Dropdown -->
                <ComboBox Grid.Column="1" 
                          Name="ToolSelectorComboBox" 
                          Width="400" 
                          Height="40"
                          ItemsSource="{Binding AvailableTools}"
                          SelectedItem="{Binding SelectedTool, Mode=TwoWay}"
                          VerticalAlignment="Center"
                          Style="{StaticResource ModernComboBox}"
                          BorderBrush="{StaticResource PrimaryAccent}"
                          BorderThickness="2">
                    <ComboBox.ItemTemplate>
                        <DataTemplate>
                            <Border Padding="12,10" Background="Transparent" MinHeight="60">
                                <Grid>
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="Auto"/>
                                        <ColumnDefinition Width="*"/>
                                        <ColumnDefinition Width="Auto"/>
                                    </Grid.ColumnDefinitions>
                                    
                                    <!-- Enhanced Accent Bar with Tool Icon -->
                                    <Border Grid.Column="0" 
                                            Background="{Binding AccentColor}" 
                                            CornerRadius="4" 
                                            Width="8"
                                            Height="40"
                                            Margin="0,0,16,0"
                                            VerticalAlignment="Center">
                                        <TextBlock Text="{Binding Icon}" 
                                                   FontSize="16"
                                                   Foreground="White"
                                                   HorizontalAlignment="Center"
                                                   VerticalAlignment="Center"/>
                                    </Border>
                                    
                                    <!-- Enhanced Tool Info -->
                                    <StackPanel Grid.Column="1" VerticalAlignment="Center">
                                        <TextBlock Text="{Binding Name}" 
                                                   FontSize="16" 
                                                   FontWeight="Bold"
                                                   Foreground="{StaticResource PrimaryText}"/>
                                        <TextBlock Text="{Binding Description}" 
                                                   FontSize="12"
                                                   Foreground="{StaticResource SecondaryText}"
                                                   Margin="0,3,0,0"
                                                   TextWrapping="Wrap"/>
                                        <StackPanel Orientation="Horizontal" Margin="0,5,0,0">
                                            <Border Background="{StaticResource ElevatedSurface}"
                                                    CornerRadius="8"
                                                    Padding="6,2">
                                                <TextBlock Text="{Binding ExcelConfigCount, StringFormat=\{0\} configs}" 
                                                           FontSize="10"
                                                           Foreground="{StaticResource PrimaryAccent}"/>
                                            </Border>
                                            <Border Background="{StaticResource ElevatedSurface}"
                                                    CornerRadius="8"
                                                    Padding="6,2"
                                                    Margin="5,0,0,0">
                                                <TextBlock Text="{Binding TemplateFileCount, StringFormat=\{0\} templates}" 
                                                           FontSize="10"
                                                           Foreground="{StaticResource SuccessColor}"/>
                                            </Border>
                                        </StackPanel>
                                    </StackPanel>
                                    
                                    <!-- Status Indicator -->
                                    <Border Grid.Column="2" 
                                            Background="{StaticResource SuccessColor}"
                                            CornerRadius="50"
                                            Width="12"
                                            Height="12"
                                            VerticalAlignment="Top"
                                            Margin="8,0,0,0">
                                        <TextBlock Text="?" 
                                                   FontSize="8"
                                                   Foreground="White"
                                                   HorizontalAlignment="Center"
                                                   VerticalAlignment="Center"/>
                                    </Border>
                                </Grid>
                            </Border>
                        </DataTemplate>
                    </ComboBox.ItemTemplate>
                </ComboBox>
                
                <!-- Enhanced Status Indicators -->
                <StackPanel Grid.Column="3" 
                            Orientation="Horizontal" 
                            VerticalAlignment="Center">
                    <!-- Templates Count -->
                    <Border Background="{StaticResource ElevatedSurface}"
                            BorderBrush="{StaticResource PrimaryAccent}"
                            BorderThickness="1"
                            CornerRadius="6"
                            Padding="12,6"
                            Margin="0,0,8,0">
                        <StackPanel Orientation="Horizontal">
                            <TextBlock Text="??" FontSize="12" Margin="0,0,6,0"/>
                            <TextBlock Text="Templates:" 
                                       Foreground="{StaticResource SecondaryText}"
                                       FontSize="11"
                                       FontWeight="SemiBold"/>
                            <TextBlock Text="0" 
                                       FontWeight="Bold"
                                       Foreground="{StaticResource PrimaryAccent}"
                                       FontSize="12"
                                       Margin="4,0,0,0"/>
                        </StackPanel>
                    </Border>
                    
                    <!-- Components Count -->
                    <Border Background="{StaticResource ElevatedSurface}"
                            BorderBrush="{StaticResource SuccessColor}"
                            BorderThickness="1"
                            CornerRadius="6"
                            Padding="12,6"
                            Margin="0,0,8,0">
                        <StackPanel Orientation="Horizontal">
                            <TextBlock Text="??" FontSize="12" Margin="0,0,6,0"/>
                            <TextBlock Text="Components:" 
                                       Foreground="{StaticResource SecondaryText}"
                                       FontSize="11"
                                       FontWeight="SemiBold"/>
                            <TextBlock Text="7" 
                                       FontWeight="Bold"
                                       Foreground="{StaticResource SuccessColor}"
                                       FontSize="12"
                                       Margin="4,0,0,0"/>
                        </StackPanel>
                    </Border>
                    
                    <!-- Status Indicator -->
                    <Border Background="{StaticResource SuccessColor}"
                            BorderBrush="{StaticResource SuccessColor}"
                            BorderThickness="1"
                            CornerRadius="6"
                            Padding="12,6">
                        <StackPanel Orientation="Horizontal">
                            <TextBlock Text="?" 
                                       Foreground="White"
                                       FontSize="12"
                                       FontWeight="Bold"
                                       Margin="0,0,6,0"/>
                            <TextBlock Text="Ready" 
                                       Foreground="White"
                                       FontSize="11"
                                       FontWeight="SemiBold"/>
                        </StackPanel>
                    </Border>
                </StackPanel>
            </Grid>
        </Border>

        <!-- Status Bar -->
        <StatusBar DockPanel.Dock="Bottom" Height="30" Background="{StaticResource DarkPanel}">
            <StatusBarItem>
                <TextBlock Text="{Binding StatusMessage}" Foreground="{StaticResource LightText}"/>
            </StatusBarItem>
            <Separator/>
            <StatusBarItem>
                <StackPanel Orientation="Horizontal">
                    <TextBlock Text="Validation: " Foreground="{StaticResource LightText}"/>
                    <TextBlock Text="{Binding ValidationStatus}" FontWeight="Bold" Foreground="{StaticResource LightText}"/>
                </StackPanel>
            </StatusBarItem>
        </StatusBar>

        <!-- Bottom Action Bar (MODERN) -->
        <Border DockPanel.Dock="Bottom" 
                Background="{StaticResource ElevatedSurface}" 
                BorderBrush="{StaticResource BorderColor}" 
                BorderThickness="0,1,0,0" 
                Padding="16"
                Effect="{StaticResource SubtleShadow}">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>

                <!-- Validation Summary -->
                <StackPanel Grid.Column="0" Orientation="Horizontal" VerticalAlignment="Center">
                    <TextBlock Text="{Binding ValidationIcon}" FontSize="20" Margin="0,0,10,0" Foreground="{StaticResource PrimaryText}"/>
                    <TextBlock Text="{Binding ValidationSummary}" FontSize="14" VerticalAlignment="Center" Foreground="{StaticResource LightText}"/>
                </StackPanel>

                <!-- Action Buttons (MODERN) -->
                <StackPanel Grid.Column="1" Orientation="Horizontal">
                    <Button Content="Advanced" 
                            Style="{StaticResource SecondaryButton}"
                            Margin="0,0,8,0"/>
                    <Button Content="Summary" 
                            Style="{StaticResource SecondaryButton}"
                            Margin="0,0,8,0"/>
                    <Button Name="GenerateButton" 
                            Content="Generate" 
                            Click="GenerateButton_Click"
                            Style="{StaticResource SuccessButton}"
                            MinWidth="120"
                            Margin="0,0,8,0"/>
                    <Button Content="Save" 
                            Click="SaveButton_Click"
                            Style="{StaticResource PrimaryButton}"
                            Margin="0"/>
                </StackPanel>
            </Grid>
        </Border>

        <!-- Main Content Area -->
        <Grid>
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="3*"/>
                <ColumnDefinition Width="5"/>
                <ColumnDefinition Width="2*"/>
            </Grid.ColumnDefinitions>

            <!-- Left Panel: Configuration -->
            <ScrollViewer Grid.Column="0" VerticalScrollBarVisibility="Auto">
                <StackPanel Margin="10">
                    <!-- Component Type Tabs -->
                    <TextBlock Text="Component Type" Style="{StaticResource HeaderStyle}"/>
                    <TabControl Name="ComponentTabs" Height="700">
                        <!-- Tab items will be added dynamically in code-behind -->
                    </TabControl>
                </StackPanel>
            </ScrollViewer>

            <!-- Splitter -->
            <GridSplitter Grid.Column="1" Width="5" HorizontalAlignment="Stretch" Background="#CCCCCC"/>

            <!-- Right Panel: Preview and Validation -->
            <Grid Grid.Column="2">
                <Grid.RowDefinitions>
                    <RowDefinition Height="2*"/>
                    <RowDefinition Height="5"/>
                    <RowDefinition Height="1*"/>
                </Grid.RowDefinitions>

                <!-- Preview Panel -->
                <Border Grid.Row="0" 
                        BorderBrush="{StaticResource BorderColor}" 
                        BorderThickness="1" 
                        Margin="10" 
                        Background="{StaticResource SecondaryBackground}"
                        CornerRadius="{StaticResource CornerRadiusMedium}">
                    <Grid>
                        <Grid.RowDefinitions>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="*"/>
                            <RowDefinition Height="Auto"/>
                        </Grid.RowDefinitions>

                        <!-- Preview Header -->
                        <Border Grid.Row="0" 
                                Background="{StaticResource ElevatedSurface}"
                                BorderBrush="{StaticResource BorderColor}"
                                BorderThickness="0,0,0,1"
                                Padding="15,10">
                            <StackPanel>
                                <TextBlock Text="TEMPLATE PREVIEW" 
                                           FontSize="{StaticResource FontSizeM}" 
                                           FontWeight="Bold"
                                           Foreground="{StaticResource PrimaryAccent}"/>
                                <TextBlock Text="{Binding SelectedTemplate.DisplayName, FallbackValue='No template selected'}" 
                                           FontSize="{StaticResource FontSizeS}"
                                           Foreground="{StaticResource SecondaryText}"
                                           Margin="0,5,0,0"/>
                            </StackPanel>
                        </Border>

                        <!-- Preview Area -->
                        <Border Grid.Row="1" 
                                Background="{StaticResource PrimaryBackground}" 
                                Margin="10"
                                BorderBrush="{StaticResource BorderColor}"
                                BorderThickness="1"
                                CornerRadius="{StaticResource CornerRadiusSmall}">
                            <Viewbox>
                                <Canvas Name="PreviewCanvas" Width="300" Height="300">
                                    <Rectangle Width="300" Height="300" 
                                               Fill="{StaticResource PrimaryBackground}" 
                                               Stroke="{StaticResource BorderColor}" 
                                               StrokeThickness="1"/>
                                    <TextBlock Canvas.Left="80" Canvas.Top="130" 
                                               Text="3D Preview" 
                                               FontSize="20" 
                                               FontWeight="Light"
                                               Foreground="{StaticResource SecondaryText}"/>
                                    <TextBlock Canvas.Left="90" Canvas.Top="160" 
                                               Text="Coming Soon" 
                                               FontSize="14" 
                                               FontStyle="Italic"
                                               Foreground="{StaticResource SecondaryText}"/>
                                </Canvas>
                            </Viewbox>
                        </Border>

                        <!-- Template Info -->
                        <StackPanel Grid.Row="2" Margin="15,10,15,15">
                            <TextBlock Text="Template Information" 
                                       FontWeight="SemiBold" 
                                       FontSize="{StaticResource FontSizeS}"
                                       Margin="0,0,0,8" 
                                       Foreground="{StaticResource PrimaryText}"/>
                            
                            <Grid>
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="Auto"/>
                                    <ColumnDefinition Width="*"/>
                                </Grid.ColumnDefinitions>
                                <Grid.RowDefinitions>
                                    <RowDefinition Height="Auto"/>
                                    <RowDefinition Height="Auto"/>
                                    <RowDefinition Height="Auto"/>
                                </Grid.RowDefinitions>
                                
                                <TextBlock Grid.Row="0" Grid.Column="0" 
                                           Text="Category:" 
                                           Foreground="{StaticResource SecondaryText}"
                                           Margin="0,0,10,5"/>
                                <TextBlock Grid.Row="0" Grid.Column="1" 
                                           Text="{Binding SelectedTemplate.Category, FallbackValue='N/A'}" 
                                           Foreground="{StaticResource PrimaryText}"
                                           FontWeight="Medium"
                                           Margin="0,0,0,5"/>
                                
                                <TextBlock Grid.Row="1" Grid.Column="0" 
                                           Text="File:" 
                                           Foreground="{StaticResource SecondaryText}"
                                           Margin="0,0,10,5"/>
                                <TextBlock Grid.Row="1" Grid.Column="1" 
                                           Text="{Binding SelectedTemplate.FileName, FallbackValue='N/A'}" 
                                           Foreground="{StaticResource PrimaryText}"
                                           FontSize="{StaticResource FontSizeXS}"
                                           TextWrapping="Wrap"
                                           Margin="0,0,0,5"/>
                                
                                <TextBlock Grid.Row="2" Grid.Column="0" 
                                           Text="Job #:" 
                                           Foreground="{StaticResource SecondaryText}"
                                           Margin="0,0,10,0"/>
                                <TextBlock Grid.Row="2" Grid.Column="1" 
                                           Text="{Binding SelectedTemplate.JobNumber, FallbackValue='Standard'}" 
                                           Foreground="{StaticResource PrimaryAccent}"
                                           FontWeight="SemiBold"/>
                            </Grid>
                        </StackPanel>
                    </Grid>
                </Border>

                <GridSplitter Grid.Row="1" Height="5" HorizontalAlignment="Stretch" Background="{StaticResource DarkBorder}"/>

                <!-- Validation Panel -->
                <Border Grid.Row="2" BorderBrush="{StaticResource DarkBorder}" BorderThickness="1" Margin="10" Background="{StaticResource DarkPanel}">
                    <ScrollViewer VerticalScrollBarVisibility="Auto">
                        <StackPanel Margin="10">
                            <TextBlock Text="Validation Status" Style="{StaticResource HeaderStyle}"/>
                            
                            <StackPanel Orientation="Horizontal" Margin="0,5">
                                <TextBlock Text="?" Foreground="#10B981" FontWeight="Bold" Margin="0,0,5,0"/>
                                <TextBlock Text="{Binding ValidParameterCount}" Foreground="{StaticResource LightText}"/>
                                <TextBlock Text=" Parameters Valid" Foreground="{StaticResource LightText}"/>
                            </StackPanel>

                            <StackPanel Orientation="Horizontal" Margin="0,5">
                                <TextBlock Text="?" Foreground="#F59E0B" FontWeight="Bold" Margin="0,0,5,0"/>
                                <TextBlock Text="{Binding WarningCount}" Foreground="{StaticResource LightText}"/>
                                <TextBlock Text=" Warnings" Foreground="{StaticResource LightText}"/>
                            </StackPanel>

                            <StackPanel Orientation="Horizontal" Margin="0,5">
                                <TextBlock Text="?" Foreground="#EF4444" FontWeight="Bold" Margin="0,0,5,0"/>
                                <TextBlock Text="{Binding ErrorCount}" Foreground="{StaticResource LightText}"/>
                                <TextBlock Text=" Errors" Foreground="{StaticResource LightText}"/>
                            </StackPanel>

                            <Separator Margin="0,10" Background="{StaticResource DarkBorder}"/>

                            <ItemsControl ItemsSource="{Binding ValidationMessages}">
                                <ItemsControl.ItemTemplate>
                                    <DataTemplate>
                                        <TextBlock Text="{Binding}" TextWrapping="Wrap" Margin="0,2" Foreground="{StaticResource LightText}"/>
                                    </DataTemplate>
                                </ItemsControl.ItemTemplate>
                            </ItemsControl>
                        </StackPanel>
                    </ScrollViewer>
                </Border>
            </Grid>
        </Grid>
    </DockPanel>
</Window>
