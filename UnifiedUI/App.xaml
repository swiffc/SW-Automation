<Application x:Class="UnifiedUI.App"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             StartupUri="MainWindow.xaml">
    <Application.Resources>
        <!-- 
        =================================================================
        MODERN DARK THEME - RESOURCE REGISTRATION
        =================================================================
        All theme files are loaded here for global access
        Date: October 28, 2025
        =================================================================
        -->
        <ResourceDictionary>
            <ResourceDictionary.MergedDictionaries>
                <!-- Base Colors & Resources -->
                <ResourceDictionary Source="Themes/ModernDark.xaml"/>
                
                <!-- Button Styles -->
                <ResourceDictionary Source="Themes/ButtonStyles.xaml"/>
                
                <!-- Input Styles (TextBox, ComboBox, CheckBox) -->
                <ResourceDictionary Source="Themes/InputStyles.xaml"/>
                
                <!-- Panel Styles (Borders, Cards, Tabs) -->
                <ResourceDictionary Source="Themes/PanelStyles.xaml"/>
            </ResourceDictionary.MergedDictionaries>
            
            <!-- 
            =================================================================
            LEGACY COMPATIBILITY
            =================================================================
            Keep old color keys for any legacy code that still uses them
            =================================================================
            -->
            <SolidColorBrush x:Key="PrimaryColor" Color="#0078D4"/>
            <SolidColorBrush x:Key="AccentColor" Color="#10B981"/>
            <SolidColorBrush x:Key="ErrorColor" Color="#EF4444"/>
            <SolidColorBrush x:Key="WarningColor" Color="#F59E0B"/>
            <SolidColorBrush x:Key="SuccessColor" Color="#10B981"/>
            <FontFamily x:Key="MainFont">Segoe UI</FontFamily>
        </ResourceDictionary>
    </Application.Resources>
</Application>
