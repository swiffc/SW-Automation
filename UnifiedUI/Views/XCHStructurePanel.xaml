<UserControl x:Class="UnifiedUI.Views.XCHStructurePanel"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             Background="White">
    <ScrollViewer VerticalScrollBarVisibility="Auto" Padding="15">
        <StackPanel MaxWidth="800">
            
            <Border Background="#FCE4EC" BorderBrush="#E91E63" BorderThickness="2" 
                    CornerRadius="8" Padding="20" Margin="0,0,0,15">
                <StackPanel>
                    <TextBlock Text="❄️ XCH Structure Configuration" FontSize="20" FontWeight="Bold" 
                               Foreground="#E91E63" Margin="0,0,0,15" HorizontalAlignment="Center"/>
                    <TextBlock Text="Design Table Approach - Excel-Driven" 
                               FontSize="14" Foreground="#666" HorizontalAlignment="Center" Margin="0,0,0,10"/>
                    <TextBlock Text="Will generate: XCH cooler structure with fan configuration, using template files and Excel design tables" 
                               FontSize="12" Foreground="#999" TextWrapping="Wrap" HorizontalAlignment="Center"/>
                </StackPanel>
            </Border>

            <GroupBox Header="📄 Job Information" Margin="0,0,0,15" Padding="15">
                <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="120"/>
                        <ColumnDefinition Width="*"/>
                    </Grid.ColumnDefinitions>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                    </Grid.RowDefinitions>
                    
                    <TextBlock Grid.Row="0" Grid.Column="0" Text="Job Number:" VerticalAlignment="Center"/>
                    <TextBox Grid.Row="0" Grid.Column="1" Text="{Binding GlobalJobNumber, UpdateSourceTrigger=PropertyChanged}" 
                             Padding="5" Margin="0,5"/>
                    
                    <TextBlock Grid.Row="1" Grid.Column="0" Text="Part Prefix:" VerticalAlignment="Center"/>
                    <TextBox Grid.Row="1" Grid.Column="1" Text="{Binding GlobalPartPrefix, UpdateSourceTrigger=PropertyChanged}" 
                             Padding="5" Margin="0,5"/>
                </Grid>
            </GroupBox>

            <GroupBox Header="🔧 XCH Configuration (Coming Soon)" Margin="0,0,0,15" Padding="15" Opacity="0.5">
                <StackPanel>
                    <TextBlock Text="• Fan Ring Dimensions" Margin="0,5"/>
                    <TextBlock Text="• Fan Count and Layout" Margin="0,5"/>
                    <TextBlock Text="• Support Structure" Margin="0,5"/>
                    <TextBlock Text="• Access Platform" Margin="0,5"/>
                </StackPanel>
            </GroupBox>

        </StackPanel>
    </ScrollViewer>
</UserControl>
