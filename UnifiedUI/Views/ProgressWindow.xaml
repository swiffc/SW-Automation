<Window x:Class="UnifiedUI.Views.ProgressWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Generating Components..." 
        Height="150" Width="400"
        WindowStartupLocation="CenterScreen"
        WindowStyle="None"
        ResizeMode="NoResize"
        Background="White">
    <Border BorderBrush="#2196F3" BorderThickness="2" Padding="20">
        <StackPanel>
            <TextBlock Name="StatusText" Text="Initializing..." 
                       FontSize="14" FontWeight="SemiBold"
                       Margin="0,0,0,15"/>
            
            <ProgressBar Name="ProgressBar" Height="20" 
                         Minimum="0" Maximum="100" Value="0"/>
            
            <TextBlock Name="PercentText" Text="0%" 
                       HorizontalAlignment="Center"
                       Margin="0,10,0,0"
                       FontSize="12" Foreground="#666"/>
        </StackPanel>
    </Border>
</Window>
