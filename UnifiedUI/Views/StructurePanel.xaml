<UserControl x:Class="UnifiedUI.Views.StructurePanel"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             Background="{StaticResource PrimaryBackground}">
    
    <UserControl.Resources>
        <!-- Apply dark theme to ALL controls -->
        <Style TargetType="TextBox" BasedOn="{StaticResource ModernTextBox}"/>
        <Style TargetType="ComboBox" BasedOn="{StaticResource ModernComboBox}"/>
        <Style TargetType="Label" BasedOn="{StaticResource ModernLabel}"/>
        <Style TargetType="TextBlock">
            <Setter Property="Foreground" Value="{StaticResource PrimaryText}"/>
        </Style>
        <Style TargetType="Border" x:Key="SectionBorder">
            <Setter Property="Background" Value="{StaticResource SecondaryBackground}"/>
            <Setter Property="BorderBrush" Value="{StaticResource BorderColor}"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="CornerRadius" Value="{StaticResource CornerRadiusMedium}"/>
            <Setter Property="Padding" Value="15"/>
            <Setter Property="Effect" Value="{StaticResource SubtleShadow}"/>
        </Style>
    </UserControl.Resources>
    
    <ScrollViewer VerticalScrollBarVisibility="Auto" Padding="15">
        <StackPanel MaxWidth="800">
            
            <!-- Header -->
            <Border Background="#FFF3E0" BorderBrush="{StaticResource WarningColor}" BorderThickness="2" 
                    CornerRadius="8" Padding="20" Margin="0,0,0,15">
                <StackPanel>
                    <TextBlock Text="🏗️ Structure Configuration" FontSize="20" FontWeight="Bold" 
                               Foreground="#FF9800" Margin="0,0,0,15" HorizontalAlignment="Center"/>
                    <TextBlock Text="Columns, Beams, Base Plates, and Bracing" 
                               FontSize="14" Foreground="{StaticResource SecondaryText}" HorizontalAlignment="Center"/>
                </StackPanel>
            </Border>

            <!-- Job Information -->
            <GroupBox Header="📄 Job Information" Margin="0,0,0,15" Padding="15">
                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                    </Grid.RowDefinitions>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="120"/>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="20"/>
                        <ColumnDefinition Width="120"/>
                        <ColumnDefinition Width="*"/>
                    </Grid.ColumnDefinitions>
                    
                    <TextBlock Grid.Row="0" Grid.Column="0" Text="Job Number:" VerticalAlignment="Center"/>
                    <TextBox Grid.Row="0" Grid.Column="1" Text="{Binding GlobalJobNumber}" Padding="5" Margin="0,5"/>
                    
                    <TextBlock Grid.Row="0" Grid.Column="3" Text="Bank:" VerticalAlignment="Center"/>
                    <TextBox Grid.Row="0" Grid.Column="4" Padding="5" Margin="0,5"/>
                    
                    <TextBlock Grid.Row="1" Grid.Column="0" Text="Customer:" VerticalAlignment="Center"/>
                    <TextBox Grid.Row="1" Grid.Column="1" Padding="5" Margin="0,5"/>
                    
                    <TextBlock Grid.Row="1" Grid.Column="3" Text="Client:" VerticalAlignment="Center"/>
                    <TextBox Grid.Row="1" Grid.Column="4" Padding="5" Margin="0,5"/>
                    
                    <TextBlock Grid.Row="2" Grid.Column="0" Text="Location:" VerticalAlignment="Center"/>
                    <TextBox Grid.Row="2" Grid.Column="1" Padding="5" Margin="0,5"/>
                    
                    <TextBlock Grid.Row="2" Grid.Column="3" Text="PO Number:" VerticalAlignment="Center"/>
                    <TextBox Grid.Row="2" Grid.Column="4" Padding="5" Margin="0,5"/>
                    
                    <TextBlock Grid.Row="3" Grid.Column="0" Text="Item Number:" VerticalAlignment="Center"/>
                    <TextBox Grid.Row="3" Grid.Column="1" Padding="5" Margin="0,5"/>
                    
                    <TextBlock Grid.Row="3" Grid.Column="3" Text="Initials:" VerticalAlignment="Center"/>
                    <TextBox Grid.Row="3" Grid.Column="4" Padding="5" Margin="0,5"/>
                </Grid>
            </GroupBox>

            <!-- Column Configuration -->
            <GroupBox Header="📐 Column Configuration" Margin="0,0,0,15" Padding="15">
                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                    </Grid.RowDefinitions>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="150"/>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="20"/>
                        <ColumnDefinition Width="150"/>
                        <ColumnDefinition Width="*"/>
                    </Grid.ColumnDefinitions>
                    
                    <TextBlock Grid.Row="0" Grid.Column="0" Text="Plenum Width:" VerticalAlignment="Center"/>
                    <TextBox Grid.Row="0" Grid.Column="1" Padding="5" Margin="0,5"/>
                    
                    <TextBlock Grid.Row="0" Grid.Column="3" Text="Plenum Length:" VerticalAlignment="Center"/>
                    <TextBox Grid.Row="0" Grid.Column="4" Padding="5" Margin="0,5"/>
                    
                    <TextBlock Grid.Row="1" Grid.Column="0" Text="Column Height:" VerticalAlignment="Center"/>
                    <TextBox Grid.Row="1" Grid.Column="1" Padding="5" Margin="0,5"/>
                    
                    <TextBlock Grid.Row="1" Grid.Column="3" Text="Plenum Depth:" VerticalAlignment="Center"/>
                    <TextBox Grid.Row="1" Grid.Column="4" Padding="5" Margin="0,5"/>
                    
                    <TextBlock Grid.Row="2" Grid.Column="0" Text="Fan Count:" VerticalAlignment="Center"/>
                    <TextBox Grid.Row="2" Grid.Column="1" Padding="5" Margin="0,5"/>
                    
                    <CheckBox Grid.Row="2" Grid.Column="3" Grid.ColumnSpan="2" Content="Mid Columns" VerticalAlignment="Center" Margin="0,5"/>
                    
                    <CheckBox Grid.Row="3" Grid.Column="0" Grid.ColumnSpan="2" Content="Rotate Beams" VerticalAlignment="Center" Margin="0,5"/>
                </Grid>
            </GroupBox>

            <!-- Beam Details -->
            <GroupBox Header="🔩 Beam Configuration" Margin="0,0,0,15" Padding="15">
                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                    </Grid.RowDefinitions>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="150"/>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="20"/>
                        <ColumnDefinition Width="150"/>
                        <ColumnDefinition Width="*"/>
                    </Grid.ColumnDefinitions>
                    
                    <TextBlock Grid.Row="0" Grid.Column="0" Text="Beam Size:" VerticalAlignment="Center"/>
                    <ComboBox Grid.Row="0" Grid.Column="1" Margin="0,5">
                        <ComboBoxItem Content="W8x15"/>
                        <ComboBoxItem Content="W10x22"/>
                        <ComboBoxItem Content="W12x26" IsSelected="True"/>
                    </ComboBox>
                    
                    <TextBlock Grid.Row="0" Grid.Column="3" Text="Material:" VerticalAlignment="Center"/>
                    <ComboBox Grid.Row="0" Grid.Column="4" Margin="0,5">
                        <ComboBoxItem Content="A36" IsSelected="True"/>
                        <ComboBoxItem Content="A572 Gr50"/>
                    </ComboBox>
                    
                    <TextBlock Grid.Row="1" Grid.Column="0" Text="Depth:" VerticalAlignment="Center"/>
                    <TextBox Grid.Row="1" Grid.Column="1" Padding="5" Margin="0,5"/>
                    
                    <TextBlock Grid.Row="1" Grid.Column="3" Text="Web THK:" VerticalAlignment="Center"/>
                    <TextBox Grid.Row="1" Grid.Column="4" Padding="5" Margin="0,5"/>
                    
                    <TextBlock Grid.Row="2" Grid.Column="0" Text="Flange Width:" VerticalAlignment="Center"/>
                    <TextBox Grid.Row="2" Grid.Column="1" Padding="5" Margin="0,5"/>
                    
                    <TextBlock Grid.Row="2" Grid.Column="3" Text="Flange THK:" VerticalAlignment="Center"/>
                    <TextBox Grid.Row="2" Grid.Column="4" Padding="5" Margin="0,5"/>
                    
                    <TextBlock Grid.Row="3" Grid.Column="0" Text="K:" VerticalAlignment="Center"/>
                    <TextBox Grid.Row="3" Grid.Column="1" Padding="5" Margin="0,5"/>
                    
                    <TextBlock Grid.Row="3" Grid.Column="3" Text="K1:" VerticalAlignment="Center"/>
                    <TextBox Grid.Row="3" Grid.Column="4" Padding="5" Margin="0,5"/>
                </Grid>
            </GroupBox>

            <!-- Additional Structure Info -->
            <GroupBox Header="🔧 Additional Details" Margin="0,0,0,15" Padding="15">
                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                    </Grid.RowDefinitions>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="150"/>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="20"/>
                        <ColumnDefinition Width="150"/>
                        <ColumnDefinition Width="*"/>
                    </Grid.ColumnDefinitions>
                    
                    <TextBlock Grid.Row="0" Grid.Column="0" Text="MM Height:" VerticalAlignment="Center"/>
                    <TextBox Grid.Row="0" Grid.Column="1" Padding="5" Margin="0,5"/>
                    
                    <TextBlock Grid.Row="0" Grid.Column="3" Text="Ship Beam Height:" VerticalAlignment="Center"/>
                    <TextBox Grid.Row="0" Grid.Column="4" Padding="5" Margin="0,5"/>
                    
                    <TextBlock Grid.Row="1" Grid.Column="0" Text="Drive Width:" VerticalAlignment="Center"/>
                    <TextBox Grid.Row="1" Grid.Column="1" Padding="5" Margin="0,5"/>
                    
                    <TextBlock Grid.Row="1" Grid.Column="3" Text="Clip Height:" VerticalAlignment="Center"/>
                    <TextBox Grid.Row="1" Grid.Column="4" Padding="5" Margin="0,5"/>
                </Grid>
            </GroupBox>

            <!-- Base Plate -->
            <GroupBox Header="⚓ Base Plate" Margin="0,0,0,15" Padding="15">
                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                    </Grid.RowDefinitions>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="150"/>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="20"/>
                        <ColumnDefinition Width="150"/>
                        <ColumnDefinition Width="*"/>
                    </Grid.ColumnDefinitions>
                    
                    <TextBlock Grid.Row="0" Grid.Column="0" Text="Width:" VerticalAlignment="Center"/>
                    <TextBox Grid.Row="0" Grid.Column="1" Padding="5" Margin="0,5"/>
                    
                    <TextBlock Grid.Row="0" Grid.Column="3" Text="Length:" VerticalAlignment="Center"/>
                    <TextBox Grid.Row="0" Grid.Column="4" Padding="5" Margin="0,5"/>
                    
                    <TextBlock Grid.Row="1" Grid.Column="0" Text="Width Spacing:" VerticalAlignment="Center"/>
                    <TextBox Grid.Row="1" Grid.Column="1" Padding="5" Margin="0,5"/>
                    
                    <TextBlock Grid.Row="1" Grid.Column="3" Text="Length Spacing:" VerticalAlignment="Center"/>
                    <TextBox Grid.Row="1" Grid.Column="4" Padding="5" Margin="0,5"/>
                    
                    <TextBlock Grid.Row="2" Grid.Column="0" Text="Hole Diameter:" VerticalAlignment="Center"/>
                    <TextBox Grid.Row="2" Grid.Column="1" Padding="5" Margin="0,5"/>
                    
                    <TextBlock Grid.Row="2" Grid.Column="3" Text="Plate THK:" VerticalAlignment="Center"/>
                    <TextBox Grid.Row="2" Grid.Column="4" Padding="5" Margin="0,5"/>
                </Grid>
            </GroupBox>

            <!-- Bracing (Collapsible) -->
            <Expander Header="🔗 Bracing Configuration" Margin="0,0,0,15" Padding="15" BorderBrush="#CCC" BorderThickness="1">
                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                    </Grid.RowDefinitions>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="150"/>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="20"/>
                        <ColumnDefinition Width="150"/>
                        <ColumnDefinition Width="*"/>
                    </Grid.ColumnDefinitions>
                    
                    <TextBlock Grid.Row="0" Grid.Column="0" Text="Brace Type:" VerticalAlignment="Center"/>
                    <ComboBox Grid.Row="0" Grid.Column="1" Margin="0,5">
                        <ComboBoxItem Content="Angle" IsSelected="True"/>
                        <ComboBoxItem Content="WT"/>
                        <ComboBoxItem Content="Channel"/>
                    </ComboBox>
                    
                    <TextBlock Grid.Row="0" Grid.Column="3" Text="Angle:" VerticalAlignment="Center"/>
                    <TextBox Grid.Row="0" Grid.Column="4" Padding="5" Margin="0,5"/>
                    
                    <TextBlock Grid.Row="1" Grid.Column="0" Text="Hole Diameter:" VerticalAlignment="Center"/>
                    <TextBox Grid.Row="1" Grid.Column="1" Padding="5" Margin="0,5"/>
                    
                    <TextBlock Grid.Row="1" Grid.Column="3" Text="Clip THK:" VerticalAlignment="Center"/>
                    <TextBox Grid.Row="1" Grid.Column="4" Padding="5" Margin="0,5"/>
                </Grid>
            </Expander>

        </StackPanel>
    </ScrollViewer>
</UserControl>
