<UserControl x:Class="UnifiedUI.Views.WalkwayPanel"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             Background="{StaticResource PrimaryBackground}">
    
    <UserControl.Resources>
        <!-- Apply dark theme to ALL controls -->
        <Style TargetType="TextBox" BasedOn="{StaticResource ModernTextBox}"/>
        <Style TargetType="ComboBox" BasedOn="{StaticResource ModernComboBox}"/>
        <Style TargetType="Label" BasedOn="{StaticResource ModernLabel}"/>
        <Style TargetType="TextBlock">
            <Setter Property="Foreground" Value="{StaticResource PrimaryText}"/>
        </Style>
        <Style TargetType="Border" x:Key="SectionBorder">
            <Setter Property="Background" Value="{StaticResource SecondaryBackground}"/>
            <Setter Property="BorderBrush" Value="{StaticResource BorderColor}"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="CornerRadius" Value="{StaticResource CornerRadiusMedium}"/>
            <Setter Property="Padding" Value="15"/>
            <Setter Property="Effect" Value="{StaticResource SubtleShadow}"/>
        </Style>
    </UserControl.Resources>
    
    <ScrollViewer VerticalScrollBarVisibility="Auto" Padding="15">
        <StackPanel MaxWidth="800">
            
            <Border Background="#E0F2F1" BorderBrush="#009688" BorderThickness="2" 
                    CornerRadius="8" Padding="20" Margin="0,0,0,15">
                <StackPanel>
                    <TextBlock Text="🚶 Walkway Configuration" FontSize="20" FontWeight="Bold" 
                               Foreground="#009688" Margin="0,0,0,15" HorizontalAlignment="Center"/>
                    <TextBlock Text="Configuration panel ready for implementation" 
                               FontSize="14" Foreground="{StaticResource SecondaryText}" HorizontalAlignment="Center" Margin="0,0,0,10"/>
                    <TextBlock Text="Will include: Walkway width, length, grating type, handrail configuration, and access ladder specs" 
                               FontSize="12" Foreground="#999" TextWrapping="Wrap" HorizontalAlignment="Center"/>
                </StackPanel>
            </Border>

            <!-- Walkway Configuration -->
            <GroupBox Header="🚶 Walkway" Margin="0,0,0,15" Padding="15">
                <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="200"/>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="200"/>
                        <ColumnDefinition Width="*"/>
                    </Grid.ColumnDefinitions>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                    </Grid.RowDefinitions>
                    
                    <TextBlock Grid.Row="0" Grid.Column="0" Text="Bank:" VerticalAlignment="Center"/>
                    <TextBox Grid.Row="0" Grid.Column="1" Padding="5" Margin="0,5,10,5"/>
                    
                    <TextBlock Grid.Row="0" Grid.Column="2" Text="Plenum Center Width:" VerticalAlignment="Center"/>
                    <TextBox Grid.Row="0" Grid.Column="3" Padding="5" Margin="0,5"/>
                    
                    <TextBlock Grid.Row="1" Grid.Column="0" Text="Width:" VerticalAlignment="Center"/>
                    <TextBox Grid.Row="1" Grid.Column="1" Padding="5" Margin="0,5,10,5"/>
                    
                    <TextBlock Grid.Row="1" Grid.Column="2" Text="Floor Height:" VerticalAlignment="Center"/>
                    <TextBox Grid.Row="1" Grid.Column="3" Padding="5" Margin="0,5"/>
                    
                    <TextBlock Grid.Row="2" Grid.Column="0" Text="Offset From Column Center:" VerticalAlignment="Center"/>
                    <TextBox Grid.Row="2" Grid.Column="1" Padding="5" Margin="0,5,10,5"/>
                    
                    <TextBlock Grid.Row="2" Grid.Column="2" Text="Rail Height:" VerticalAlignment="Center"/>
                    <TextBox Grid.Row="2" Grid.Column="3" Padding="5" Margin="0,5"/>
                    
                    <TextBlock Grid.Row="3" Grid.Column="0" Text="Support Center to End:" VerticalAlignment="Center"/>
                    <TextBox Grid.Row="3" Grid.Column="1" Padding="5" Margin="0,5,10,5"/>
                    
                    <TextBlock Grid.Row="3" Grid.Column="2" Text="Column Size:" VerticalAlignment="Center"/>
                    <ComboBox Grid.Row="3" Grid.Column="3" Margin="0,5">
                        <ComboBoxItem Content="W8×31"/>
                        <ComboBoxItem Content="W10×33"/>
                        <ComboBoxItem Content="W12×40"/>
                    </ComboBox>
                    
                    <TextBlock Grid.Row="4" Grid.Column="0" Text="Minimum Stringer Size:" VerticalAlignment="Center"/>
                    <ComboBox Grid.Row="4" Grid.Column="1" Margin="0,5,10,5">
                        <ComboBoxItem Content="C6"/>
                        <ComboBoxItem Content="C8"/>
                        <ComboBoxItem Content="C10"/>
                    </ComboBox>
                    
                    <TextBlock Grid.Row="4" Grid.Column="2" Text="Rail Position:" VerticalAlignment="Center"/>
                    <StackPanel Grid.Row="4" Grid.Column="3" Orientation="Horizontal" Margin="0,5">
                        <RadioButton Content="Left" Margin="0,0,15,0"/>
                        <RadioButton Content="Right"/>
                    </StackPanel>
                </Grid>
            </GroupBox>

            <!-- Platform -->
            <GroupBox Header="📋 Platform" Margin="0,0,0,15" Padding="15">
                <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="200"/>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="200"/>
                        <ColumnDefinition Width="*"/>
                    </Grid.ColumnDefinitions>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                    </Grid.RowDefinitions>
                    
                    <TextBlock Grid.Row="0" Grid.Column="0" Text="Width:" VerticalAlignment="Center"/>
                    <TextBox Grid.Row="0" Grid.Column="1" Padding="5" Margin="0,5,10,5"/>
                    
                    <TextBlock Grid.Row="0" Grid.Column="2" Text="Length:" VerticalAlignment="Center"/>
                    <TextBox Grid.Row="0" Grid.Column="3" Padding="5" Margin="0,5"/>
                    
                    <TextBlock Grid.Row="1" Grid.Column="0" Text="Floor Height:" VerticalAlignment="Center"/>
                    <TextBox Grid.Row="1" Grid.Column="1" Padding="5" Margin="0,5,10,5"/>
                    
                    <TextBlock Grid.Row="1" Grid.Column="2" Text="Minimum Stringer Size:" VerticalAlignment="Center"/>
                    <ComboBox Grid.Row="1" Grid.Column="3" Margin="0,5">
                        <ComboBoxItem Content="C6"/>
                        <ComboBoxItem Content="C8"/>
                        <ComboBoxItem Content="C10"/>
                    </ComboBox>
                </Grid>
            </GroupBox>

            <!-- Handrail -->
            <GroupBox Header="🛤️ Handrail" Margin="0,0,0,15" Padding="15">
                <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="200"/>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="200"/>
                        <ColumnDefinition Width="*"/>
                    </Grid.ColumnDefinitions>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                    </Grid.RowDefinitions>
                    
                    <TextBlock Grid.Row="0" Grid.Column="0" Text="Length:" VerticalAlignment="Center"/>
                    <TextBox Grid.Row="0" Grid.Column="1" Padding="5" Margin="0,5,10,5"/>
                    
                    <TextBlock Grid.Row="0" Grid.Column="2" Text="Rail Height:" VerticalAlignment="Center"/>
                    <TextBox Grid.Row="0" Grid.Column="3" Padding="5" Margin="0,5"/>
                    
                    <TextBlock Grid.Row="1" Grid.Column="0" Text="Floor Height:" VerticalAlignment="Center"/>
                    <TextBox Grid.Row="1" Grid.Column="1" Padding="5" Margin="0,5,10,5"/>
                    
                    <TextBlock Grid.Row="1" Grid.Column="2" Text="Minimum Stringer Size:" VerticalAlignment="Center"/>
                    <ComboBox Grid.Row="1" Grid.Column="3" Margin="0,5">
                        <ComboBoxItem Content="C6"/>
                        <ComboBoxItem Content="C8"/>
                        <ComboBoxItem Content="C10"/>
                    </ComboBox>
                </Grid>
            </GroupBox>

            <!-- Job Information -->
            <GroupBox Header="📄 Job Information" Margin="0,0,0,15" Padding="15">
                <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="150"/>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="150"/>
                        <ColumnDefinition Width="*"/>
                    </Grid.ColumnDefinitions>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                    </Grid.RowDefinitions>
                    
                    <TextBlock Grid.Row="0" Grid.Column="0" Text="Job Number:" VerticalAlignment="Center"/>
                    <TextBox Grid.Row="0" Grid.Column="1" Padding="5" Margin="0,5,10,5"/>
                    
                    <TextBlock Grid.Row="0" Grid.Column="2" Text="Customer:" VerticalAlignment="Center"/>
                    <TextBox Grid.Row="0" Grid.Column="3" Padding="5" Margin="0,5"/>
                    
                    <TextBlock Grid.Row="1" Grid.Column="0" Text="Client:" VerticalAlignment="Center"/>
                    <TextBox Grid.Row="1" Grid.Column="1" Padding="5" Margin="0,5,10,5"/>
                    
                    <TextBlock Grid.Row="1" Grid.Column="2" Text="Location:" VerticalAlignment="Center"/>
                    <TextBox Grid.Row="1" Grid.Column="3" Padding="5" Margin="0,5"/>
                    
                    <TextBlock Grid.Row="2" Grid.Column="0" Text="Purchase Order:" VerticalAlignment="Center"/>
                    <TextBox Grid.Row="2" Grid.Column="1" Padding="5" Margin="0,5,10,5"/>
                    
                    <TextBlock Grid.Row="2" Grid.Column="2" Text="Item Number:" VerticalAlignment="Center"/>
                    <TextBox Grid.Row="2" Grid.Column="3" Padding="5" Margin="0,5"/>
                    
                    <TextBlock Grid.Row="3" Grid.Column="0" Text="Initials:" VerticalAlignment="Center"/>
                    <TextBox Grid.Row="3" Grid.Column="1" Padding="5" Margin="0,5,10,5"/>
                </Grid>
            </GroupBox>

        </StackPanel>
    </ScrollViewer>
</UserControl>
