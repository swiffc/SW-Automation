<UserControl x:Class="UnifiedUI.Views.HeaderSimplePanel"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             Background="{StaticResource PrimaryBackground}">
    
    <UserControl.Resources>
        <!-- Apply dark theme to ALL controls -->
        <Style TargetType="TextBox" BasedOn="{StaticResource ModernTextBox}"/>
        <Style TargetType="ComboBox" BasedOn="{StaticResource ModernComboBox}"/>
        <Style TargetType="Label" BasedOn="{StaticResource ModernLabel}"/>
        <Style TargetType="TextBlock">
            <Setter Property="Foreground" Value="{StaticResource PrimaryText}"/>
        </Style>
        <Style TargetType="Border" x:Key="SectionBorder">
            <Setter Property="Background" Value="{StaticResource SecondaryBackground}"/>
            <Setter Property="BorderBrush" Value="{StaticResource SuccessColor}"/>
            <Setter Property="BorderThickness" Value="0,0,0,3"/>
            <Setter Property="CornerRadius" Value="{StaticResource CornerRadiusMedium}"/>
            <Setter Property="Padding" Value="15"/>
            <Setter Property="Effect" Value="{StaticResource SubtleShadow}"/>
        </Style>
    </UserControl.Resources>
    
    <ScrollViewer VerticalScrollBarVisibility="Auto" Padding="15">
        <StackPanel MaxWidth="800">
            
            <!-- System Selection -->
            <Border Background="#E8F5E9" BorderBrush="{StaticResource SuccessColor}" BorderThickness="2" 
                    CornerRadius="8" Padding="15" Margin="0,0,0,15">
                <StackPanel>
                    <TextBlock Text="🎛︝ Header System - Simple (Fast &amp; Easy)" FontSize="16" FontWeight="Bold" 
                               Foreground="#4CAF50" Margin="0,0,0,10"/>
                    <TextBlock Text="✓ Perfect for standard headers (61-66)" Foreground="{StaticResource SecondaryText}" Margin="0,0,0,5"/>
                    <TextBlock Text="✓ Direct code generation - no complex Excel tables" Foreground="{StaticResource SecondaryText}" Margin="0,0,0,10"/>
                    
                    <Grid>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="Auto"/>
                            <ColumnDefinition Width="*"/>
                        </Grid.ColumnDefinitions>
                        <TextBlock Grid.Column="0" Text="Header Type:" VerticalAlignment="Center" Margin="0,0,10,0"/>
                        <ComboBox Grid.Column="1">
                            <ComboBoxItem Content="61 - Standard Configuration" IsSelected="True"/>
                            <ComboBoxItem Content="62 - Type 62"/>
                            <ComboBoxItem Content="63 - Type 63"/>
                            <ComboBoxItem Content="64 - Type 64"/>
                            <ComboBoxItem Content="65 - Type 65"/>
                            <ComboBoxItem Content="66 - Type 66"/>
                        </ComboBox>
                    </Grid>
                    
                    <Border Background="#FFF3E0" BorderBrush="{StaticResource WarningColor}" BorderThickness="1" 
                            CornerRadius="4" Padding="10" Margin="0,10,0,0">
                        <TextBlock TextWrapping="Wrap">
                            <Run Text="💡 Tip: " FontWeight="Bold"/>
                            <Run Text="Need multi-circuit headers or complex section frames? Use the Advanced Section Tool instead."/>
                        </TextBlock>
                    </Border>
                </StackPanel>
            </Border>

            <!-- Job Information -->
            <GroupBox Header="📄 Job Information" Margin="0,0,0,15" Padding="15">
                <GroupBox.HeaderTemplate>
                    <DataTemplate>
                        <TextBlock Text="{Binding}" FontSize="14" FontWeight="SemiBold" Foreground="{StaticResource PrimaryText}"/>
                    </DataTemplate>
                </GroupBox.HeaderTemplate>
                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                    </Grid.RowDefinitions>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="120"/>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="20"/>
                        <ColumnDefinition Width="120"/>
                        <ColumnDefinition Width="*"/>
                    </Grid.ColumnDefinitions>
                    
                    <TextBlock Grid.Row="0" Grid.Column="0" Text="Job Number:" VerticalAlignment="Center"/>
                    <TextBox Grid.Row="0" Grid.Column="1" Text="{Binding GlobalJobNumber, UpdateSourceTrigger=PropertyChanged}" 
                             Padding="5" Margin="0,5"/>
                    
                    <TextBlock Grid.Row="0" Grid.Column="3" Text="Serial No:" VerticalAlignment="Center"/>
                    <TextBox Grid.Row="0" Grid.Column="4" Text="Auto" IsEnabled="False" 
                             Background="{StaticResource SecondaryBackground}" Padding="5" Margin="0,5"/>
                    
                    <TextBlock Grid.Row="1" Grid.Column="0" Text="Section:" VerticalAlignment="Center"/>
                    <TextBox Grid.Row="1" Grid.Column="1" Text="S03" Padding="5" Margin="0,5"/>
                    
                    <TextBlock Grid.Row="1" Grid.Column="3" Text="Part No:" VerticalAlignment="Center"/>
                    <TextBox Grid.Row="1" Grid.Column="4" Text="Auto-generated" IsEnabled="False" 
                             Background="{StaticResource SecondaryBackground}" Padding="5" Margin="0,5"/>
                </Grid>
            </GroupBox>

            <!-- Box Configuration -->
            <GroupBox Header="📦 Box Configuration" Margin="0,0,0,15" Padding="15">
                <GroupBox.HeaderTemplate>
                    <DataTemplate>
                        <TextBlock Text="{Binding}" FontSize="14" FontWeight="SemiBold" Foreground="{StaticResource PrimaryText}"/>
                    </DataTemplate>
                </GroupBox.HeaderTemplate>
                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                    </Grid.RowDefinitions>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="120"/>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="80"/>
                        <ColumnDefinition Width="80"/>
                    </Grid.ColumnDefinitions>
                    
                    <TextBlock Grid.Row="0" Grid.Column="0" Text="Box Width:" VerticalAlignment="Center"/>
                    <TextBox Grid.Row="0" Grid.Column="1" Text="24.000" Padding="5" Margin="0,5"/>
                    <TextBlock Grid.Row="0" Grid.Column="2" Text="inches" VerticalAlignment="Center" 
                               Margin="10,0,0,0" Foreground="{StaticResource SecondaryText}"/>
                    <TextBlock Grid.Row="0" Grid.Column="3" Text="✅" FontSize="20" HorizontalAlignment="Center"/>
                    
                    <TextBlock Grid.Row="1" Grid.Column="0" Text="Box Height:" VerticalAlignment="Center"/>
                    <TextBox Grid.Row="1" Grid.Column="1" Text="18.000" Padding="5" Margin="0,5"/>
                    <TextBlock Grid.Row="1" Grid.Column="2" Text="inches" VerticalAlignment="Center" 
                               Margin="10,0,0,0" Foreground="{StaticResource SecondaryText}"/>
                    <TextBlock Grid.Row="1" Grid.Column="3" Text="✅" FontSize="20" HorizontalAlignment="Center"/>
                    
                    <TextBlock Grid.Row="2" Grid.Column="0" Text="Box Length:" VerticalAlignment="Center"/>
                    <TextBox Grid.Row="2" Grid.Column="1" Text="48.000" Padding="5" Margin="0,5"/>
                    <TextBlock Grid.Row="2" Grid.Column="2" Text="inches" VerticalAlignment="Center" 
                               Margin="10,0,0,0" Foreground="{StaticResource SecondaryText}"/>
                    <TextBlock Grid.Row="2" Grid.Column="3" Text="✅" FontSize="20" HorizontalAlignment="Center"/>
                </Grid>
            </GroupBox>

            <!-- Tube Layout -->
            <GroupBox Header="🔩 Tube Layout" Margin="0,0,0,15" Padding="15">
                <GroupBox.HeaderTemplate>
                    <DataTemplate>
                        <TextBlock Text="{Binding}" FontSize="14" FontWeight="SemiBold" Foreground="{StaticResource PrimaryText}"/>
                    </DataTemplate>
                </GroupBox.HeaderTemplate>
                <StackPanel>
                    <Grid>
                        <Grid.RowDefinitions>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="Auto"/>
                        </Grid.RowDefinitions>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="120"/>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="80"/>
                        </Grid.ColumnDefinitions>
                        
                        <TextBlock Grid.Row="0" Grid.Column="0" Text="Tube Hole Dia:" VerticalAlignment="Center"/>
                        <TextBox Grid.Row="0" Grid.Column="1" Text="0.750" Padding="5" Margin="0,5"/>
                        <TextBlock Grid.Row="0" Grid.Column="2" Text="inches" VerticalAlignment="Center" 
                                   Margin="10,0,0,0" Foreground="{StaticResource SecondaryText}"/>
                        
                        <TextBlock Grid.Row="1" Grid.Column="0" Text="Position (X,Y):" VerticalAlignment="Center"/>
                        <StackPanel Grid.Row="1" Grid.Column="1" Grid.ColumnSpan="2" Orientation="Horizontal" Margin="0,5">
                            <TextBox Text="2.000" Width="80" Padding="5" Margin="0,0,5,0"/>
                            <TextBlock Text="," VerticalAlignment="Center" Margin="0,0,5,0"/>
                            <TextBox Text="2.000" Width="80" Padding="5"/>
                        </StackPanel>
                    </Grid>
                    
                    <Separator Margin="0,15"/>
                    
                    <TextBlock Text="Row Configuration (up to 12 rows)" FontWeight="SemiBold" Margin="0,0,0,10"/>
                    <Grid>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="20"/>
                            <ColumnDefinition Width="*"/>
                        </Grid.ColumnDefinitions>
                        
                        <StackPanel Grid.Column="0">
                            <Grid Margin="0,5">
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="70"/>
                                    <ColumnDefinition Width="*"/>
                                </Grid.ColumnDefinitions>
                                <TextBlock Text="Row 1:" VerticalAlignment="Center"/>
                                <TextBox Grid.Column="1" Text="24" Padding="5"/>
                            </Grid>
                            <Grid Margin="0,5">
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="70"/>
                                    <ColumnDefinition Width="*"/>
                                </Grid.ColumnDefinitions>
                                <TextBlock Text="Row 2:" VerticalAlignment="Center"/>
                                <TextBox Grid.Column="1" Text="23" Padding="5"/>
                            </Grid>
                            <Grid Margin="0,5">
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="70"/>
                                    <ColumnDefinition Width="*"/>
                                </Grid.ColumnDefinitions>
                                <TextBlock Text="Row 3:" VerticalAlignment="Center"/>
                                <TextBox Grid.Column="1" Text="24" Padding="5"/>
                            </Grid>
                            <Grid Margin="0,5">
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="70"/>
                                    <ColumnDefinition Width="*"/>
                                </Grid.ColumnDefinitions>
                                <TextBlock Text="Row 4:" VerticalAlignment="Center"/>
                                <TextBox Grid.Column="1" Text="23" Padding="5"/>
                            </Grid>
                            <Grid Margin="0,5">
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="70"/>
                                    <ColumnDefinition Width="*"/>
                                </Grid.ColumnDefinitions>
                                <TextBlock Text="Row 5:" VerticalAlignment="Center"/>
                                <TextBox Grid.Column="1" Text="0" Padding="5"/>
                            </Grid>
                            <Grid Margin="0,5">
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="70"/>
                                    <ColumnDefinition Width="*"/>
                                </Grid.ColumnDefinitions>
                                <TextBlock Text="Row 6:" VerticalAlignment="Center"/>
                                <TextBox Grid.Column="1" Text="0" Padding="5"/>
                            </Grid>
                        </StackPanel>
                        
                        <StackPanel Grid.Column="2">
                            <Grid Margin="0,5">
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="70"/>
                                    <ColumnDefinition Width="*"/>
                                </Grid.ColumnDefinitions>
                                <TextBlock Text="Row 7:" VerticalAlignment="Center"/>
                                <TextBox Grid.Column="1" Text="0" Padding="5"/>
                            </Grid>
                            <Grid Margin="0,5">
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="70"/>
                                    <ColumnDefinition Width="*"/>
                                </Grid.ColumnDefinitions>
                                <TextBlock Text="Row 8:" VerticalAlignment="Center"/>
                                <TextBox Grid.Column="1" Text="0" Padding="5"/>
                            </Grid>
                            <Grid Margin="0,5">
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="70"/>
                                    <ColumnDefinition Width="*"/>
                                </Grid.ColumnDefinitions>
                                <TextBlock Text="Row 9:" VerticalAlignment="Center"/>
                                <TextBox Grid.Column="1" Text="0" Padding="5"/>
                            </Grid>
                            <Grid Margin="0,5">
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="70"/>
                                    <ColumnDefinition Width="*"/>
                                </Grid.ColumnDefinitions>
                                <TextBlock Text="Row 10:" VerticalAlignment="Center"/>
                                <TextBox Grid.Column="1" Text="0" Padding="5"/>
                            </Grid>
                            <Grid Margin="0,5">
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="70"/>
                                    <ColumnDefinition Width="*"/>
                                </Grid.ColumnDefinitions>
                                <TextBlock Text="Row 11:" VerticalAlignment="Center"/>
                                <TextBox Grid.Column="1" Text="0" Padding="5"/>
                            </Grid>
                            <Grid Margin="0,5">
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="70"/>
                                    <ColumnDefinition Width="*"/>
                                </Grid.ColumnDefinitions>
                                <TextBlock Text="Row 12:" VerticalAlignment="Center"/>
                                <TextBox Grid.Column="1" Text="0" Padding="5"/>
                            </Grid>
                        </StackPanel>
                    </Grid>
                    
                    <Border Background="#E3F2FD" Padding="10" CornerRadius="4" Margin="0,15,0,0">
                        <TextBlock Text="Total Tubes: 94" FontSize="16" FontWeight="Bold" 
                                   Foreground="#2196F3" HorizontalAlignment="Center"/>
                    </Border>
                </StackPanel>
            </GroupBox>

            <!-- Plates (Collapsible) -->
            <Expander Header="📝 Plates Configuration" Margin="0,0,0,15" 
                      BorderBrush="#CCC" BorderThickness="1" Padding="15">
                <StackPanel>
                    <TextBlock Text="▼ Tubesheet" FontWeight="SemiBold" Margin="0,5,0,5"/>
                    <Grid Margin="0,0,0,15">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="100"/>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="20"/>
                            <ColumnDefinition Width="100"/>
                            <ColumnDefinition Width="*"/>
                        </Grid.ColumnDefinitions>
                        <TextBlock Text="THK:" VerticalAlignment="Center"/>
                        <TextBox Grid.Column="1" Text="0.375" Margin="0,3"/>
                        <TextBlock Grid.Column="3" Text="Part No:" VerticalAlignment="Center"/>
                        <TextBox Grid.Column="4" Text="JOBNO-61-1" Margin="0,3"/>
                    </Grid>
                    
                    <TextBlock Text="▶ Plugsheet (Click to expand)" FontWeight="SemiBold" 
                               Foreground="#2196F3" Cursor="Hand" Margin="0,5"/>
                    <TextBlock Text="▶ Top/Bottom Plate" FontWeight="SemiBold" 
                               Foreground="#2196F3" Cursor="Hand" Margin="0,5"/>
                    <TextBlock Text="▶ End Plates" FontWeight="SemiBold" 
                               Foreground="#2196F3" Cursor="Hand" Margin="0,5"/>
                </StackPanel>
            </Expander>

            <!-- Connections (Collapsible) -->
            <Expander Header="🔌 Connections" Margin="0,0,0,15" 
                      BorderBrush="#CCC" BorderThickness="1" Padding="15">
                <StackPanel>
                    <Grid Margin="0,5">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="80"/>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="20"/>
                            <ColumnDefinition Width="80"/>
                            <ColumnDefinition Width="*"/>
                        </Grid.ColumnDefinitions>
                        <TextBlock Text="Inlet:" VerticalAlignment="Center" FontWeight="SemiBold"/>
                        <ComboBox Grid.Column="1" Margin="0,3">
                            <ComboBoxItem Content="Top" IsSelected="True"/>
                            <ComboBoxItem Content="Bottom"/>
                            <ComboBoxItem Content="Side"/>
                        </ComboBox>
                        <TextBlock Grid.Column="3" Text="Size:" VerticalAlignment="Center"/>
                        <ComboBox Grid.Column="4" Margin="0,3">
                            <ComboBoxItem Content='4" 150#' IsSelected="True"/>
                            <ComboBoxItem Content='6" 150#'/>
                            <ComboBoxItem Content='8" 150#'/>
                        </ComboBox>
                    </Grid>
                    
                    <Grid Margin="0,5">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="80"/>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="20"/>
                            <ColumnDefinition Width="80"/>
                            <ColumnDefinition Width="*"/>
                        </Grid.ColumnDefinitions>
                        <TextBlock Text="Outlet:" VerticalAlignment="Center" FontWeight="SemiBold"/>
                        <ComboBox Grid.Column="1" Margin="0,3">
                            <ComboBoxItem Content="Bottom" IsSelected="True"/>
                            <ComboBoxItem Content="Top"/>
                            <ComboBoxItem Content="Side"/>
                        </ComboBox>
                        <TextBlock Grid.Column="3" Text="Size:" VerticalAlignment="Center"/>
                        <ComboBox Grid.Column="4" Margin="0,3">
                            <ComboBoxItem Content='4" 150#' IsSelected="True"/>
                            <ComboBoxItem Content='6" 150#'/>
                            <ComboBoxItem Content='8" 150#'/>
                        </ComboBox>
                    </Grid>
                    
                    <Separator Margin="0,10"/>
                    <CheckBox Content="Add Vent Connection" Margin="0,5"/>
                    <CheckBox Content="Add Drain Connection" Margin="0,5"/>
                    <CheckBox Content="Add Temperature Port" Margin="0,5"/>
                    <CheckBox Content="Add Pressure Port" Margin="0,5"/>
                </StackPanel>
            </Expander>

        </StackPanel>
    </ScrollViewer>
</UserControl>
