<UserControl x:Class="UnifiedUI.Views.PlenumPanel"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             Background="{StaticResource PrimaryBackground}">
    
    <UserControl.Resources>
        <!-- Apply dark theme to ALL controls -->
        <Style TargetType="TextBox" BasedOn="{StaticResource ModernTextBox}"/>
        <Style TargetType="ComboBox" BasedOn="{StaticResource ModernComboBox}"/>
        <Style TargetType="Label" BasedOn="{StaticResource ModernLabel}"/>
        <Style TargetType="TextBlock">
            <Setter Property="Foreground" Value="{StaticResource PrimaryText}"/>
        </Style>
        <Style TargetType="Border" x:Key="SectionBorder">
            <Setter Property="Background" Value="{StaticResource SecondaryBackground}"/>
            <Setter Property="BorderBrush" Value="{StaticResource BorderColor}"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="CornerRadius" Value="{StaticResource CornerRadiusMedium}"/>
            <Setter Property="Padding" Value="15"/>
            <Setter Property="Effect" Value="{StaticResource SubtleShadow}"/>
        </Style>
    </UserControl.Resources>
    
    <ScrollViewer VerticalScrollBarVisibility="Auto" Padding="15">
        <StackPanel MaxWidth="800">
            
            <Border Background="#F3E5F5" BorderBrush="#9C27B0" BorderThickness="2" 
                    CornerRadius="8" Padding="20" Margin="0,0,0,15">
                <StackPanel>
                    <TextBlock Text="📦 Plenum Configuration" FontSize="20" FontWeight="Bold" 
                               Foreground="#9C27B0" Margin="0,0,0,15" HorizontalAlignment="Center"/>
                    <TextBlock Text="Configuration panel ready for implementation" 
                               FontSize="14" Foreground="{StaticResource SecondaryText}" HorizontalAlignment="Center" Margin="0,0,0,10"/>
                    <TextBlock Text="Will include: Plenum dimensions, inlet/outlet configuration, baffle plates, and insulation specs" 
                               FontSize="12" Foreground="#999" TextWrapping="Wrap" HorizontalAlignment="Center"/>
                </StackPanel>
            </Border>

            <!-- Plenum Dimensions -->
            <GroupBox Header="📐 Plenum Dimensions" Margin="0,0,0,15" Padding="15">
                <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="150"/>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="150"/>
                        <ColumnDefinition Width="*"/>
                    </Grid.ColumnDefinitions>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                    </Grid.RowDefinitions>
                    
                    <TextBlock Grid.Row="0" Grid.Column="0" Text="Width (L×L):" VerticalAlignment="Center"/>
                    <TextBox Grid.Row="0" Grid.Column="1" Padding="5" Margin="0,5,10,5"/>
                    
                    <TextBlock Grid.Row="0" Grid.Column="2" Text="Length (L×L):" VerticalAlignment="Center"/>
                    <TextBox Grid.Row="0" Grid.Column="3" Padding="5" Margin="0,5"/>
                    
                    <TextBlock Grid.Row="1" Grid.Column="0" Text="Plenum Depth:" VerticalAlignment="Center"/>
                    <TextBox Grid.Row="1" Grid.Column="1" Padding="5" Margin="0,5,10,5"/>
                    
                    <TextBlock Grid.Row="1" Grid.Column="2" Text="Total Column Height:" VerticalAlignment="Center"/>
                    <TextBox Grid.Row="1" Grid.Column="3" Padding="5" Margin="0,5"/>
                    
                    <CheckBox Grid.Row="2" Grid.Column="0" Grid.ColumnSpan="2" Content="Mid Columns" Margin="0,5"/>
                </Grid>
            </GroupBox>

            <!-- Fan Configuration -->
            <GroupBox Header="🌀 Fan Configuration" Margin="0,0,0,15" Padding="15">
                <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="150"/>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="150"/>
                        <ColumnDefinition Width="*"/>
                    </Grid.ColumnDefinitions>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                    </Grid.RowDefinitions>
                    
                    <TextBlock Grid.Row="0" Grid.Column="0" Text="Fan Count:" VerticalAlignment="Center"/>
                    <TextBox Grid.Row="0" Grid.Column="1" Padding="5" Margin="0,5,10,5"/>
                    
                    <TextBlock Grid.Row="0" Grid.Column="2" Text="Fan Diameter:" VerticalAlignment="Center"/>
                    <TextBox Grid.Row="0" Grid.Column="3" Padding="5" Margin="0,5"/>
                    
                    <TextBlock Grid.Row="1" Grid.Column="0" Text="Fan Ring Depth:" VerticalAlignment="Center"/>
                    <TextBox Grid.Row="1" Grid.Column="1" Padding="5" Margin="0,5,10,5"/>
                </Grid>
            </GroupBox>

            <!-- Machinery Mount -->
            <GroupBox Header="⚙️ Machinery Mount" Margin="0,0,0,15" Padding="15">
                <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="180"/>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="180"/>
                        <ColumnDefinition Width="*"/>
                    </Grid.ColumnDefinitions>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                    </Grid.RowDefinitions>
                    
                    <TextBlock Grid.Row="0" Grid.Column="0" Text="Design:" VerticalAlignment="Center"/>
                    <ComboBox Grid.Row="0" Grid.Column="1" Margin="0,5,10,5">
                        <ComboBoxItem Content="Motor Shaft Down"/>
                        <ComboBoxItem Content="Motor Shaft Up"/>
                    </ComboBox>
                    
                    <CheckBox Grid.Row="0" Grid.Column="2" Grid.ColumnSpan="2" Content="Motor Removal Beam" Margin="0,5"/>
                    
                    <TextBlock Grid.Row="1" Grid.Column="0" Text="MM Width:" VerticalAlignment="Center"/>
                    <TextBox Grid.Row="1" Grid.Column="1" Padding="5" Margin="0,5,10,5"/>
                    
                    <TextBlock Grid.Row="1" Grid.Column="2" Text="MM Height:" VerticalAlignment="Center"/>
                    <TextBox Grid.Row="1" Grid.Column="3" Padding="5" Margin="0,5"/>
                    
                    <TextBlock Grid.Row="2" Grid.Column="0" Text="MM Headroom:" VerticalAlignment="Center"/>
                    <TextBox Grid.Row="2" Grid.Column="1" Padding="5" Margin="0,5,10,5"/>
                </Grid>
            </GroupBox>

            <!-- Column & Panel Configuration -->
            <GroupBox Header="🏗️ Structure" Margin="0,0,0,15" Padding="15">
                <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="180"/>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="180"/>
                        <ColumnDefinition Width="*"/>
                    </Grid.ColumnDefinitions>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                    </Grid.RowDefinitions>
                    
                    <TextBlock Grid.Row="0" Grid.Column="0" Text="Column Size:" VerticalAlignment="Center"/>
                    <ComboBox Grid.Row="0" Grid.Column="1" Margin="0,5,10,5">
                        <ComboBoxItem Content="W8×31"/>
                        <ComboBoxItem Content="W10×33"/>
                        <ComboBoxItem Content="W12×40"/>
                    </ComboBox>
                    
                    <TextBlock Grid.Row="0" Grid.Column="2" Text="End Panel Thickness:" VerticalAlignment="Center"/>
                    <ComboBox Grid.Row="0" Grid.Column="3" Margin="0,5">
                        <ComboBoxItem Content="0.375"/>
                        <ComboBoxItem Content="0.5"/>
                    </ComboBox>
                    
                    <TextBlock Grid.Row="1" Grid.Column="0" Text="Ship Beam Height:" VerticalAlignment="Center"/>
                    <TextBox Grid.Row="1" Grid.Column="1" Padding="5" Margin="0,5,10,5"/>
                    
                    <TextBlock Grid.Row="1" Grid.Column="2" Text="Side Panel Thickness:" VerticalAlignment="Center"/>
                    <ComboBox Grid.Row="1" Grid.Column="3" Margin="0,5">
                        <ComboBoxItem Content="0.375"/>
                        <ComboBoxItem Content="0.5"/>
                    </ComboBox>
                </Grid>
            </GroupBox>

            <!-- Bracing -->
            <GroupBox Header="🔗 Bracing" Margin="0,0,0,15" Padding="15">
                <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="180"/>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="180"/>
                        <ColumnDefinition Width="*"/>
                    </Grid.ColumnDefinitions>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                    </Grid.RowDefinitions>
                    
                    <TextBlock Grid.Row="0" Grid.Column="0" Text="Brace Type:" VerticalAlignment="Center"/>
                    <ComboBox Grid.Row="0" Grid.Column="1" Margin="0,5,10,5">
                        <ComboBoxItem Content="TX"/>
                        <ComboBoxItem Content="Angle"/>
                    </ComboBox>
                    
                    <TextBlock Grid.Row="0" Grid.Column="2" Text="Brace Angle:" VerticalAlignment="Center"/>
                    <TextBox Grid.Row="0" Grid.Column="3" Padding="5" Margin="0,5"/>
                    
                    <TextBlock Grid.Row="1" Grid.Column="0" Text="Clip Height:" VerticalAlignment="Center"/>
                    <TextBox Grid.Row="1" Grid.Column="1" Padding="5" Margin="0,5,10,5"/>
                    
                    <TextBlock Grid.Row="1" Grid.Column="2" Text="Clip Thickness:" VerticalAlignment="Center"/>
                    <TextBox Grid.Row="1" Grid.Column="3" Padding="5" Margin="0,5"/>
                    
                    <TextBlock Grid.Row="2" Grid.Column="0" Text="Hole Diameter:" VerticalAlignment="Center"/>
                    <TextBox Grid.Row="2" Grid.Column="1" Padding="5" Margin="0,5,10,5"/>
                    
                    <TextBlock Grid.Row="2" Grid.Column="2" Text="Flange Gage WT:" VerticalAlignment="Center"/>
                    <TextBox Grid.Row="2" Grid.Column="3" Padding="5" Margin="0,5"/>
                </Grid>
            </GroupBox>

            <!-- Job Information -->
            <GroupBox Header="📄 Job Information" Margin="0,0,0,15" Padding="15">
                <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="150"/>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="150"/>
                        <ColumnDefinition Width="*"/>
                    </Grid.ColumnDefinitions>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                    </Grid.RowDefinitions>
                    
                    <TextBlock Grid.Row="0" Grid.Column="0" Text="Bank:" VerticalAlignment="Center"/>
                    <TextBox Grid.Row="0" Grid.Column="1" Padding="5" Margin="0,5,10,5"/>
                    
                    <TextBlock Grid.Row="0" Grid.Column="2" Text="Customer:" VerticalAlignment="Center"/>
                    <TextBox Grid.Row="0" Grid.Column="3" Padding="5" Margin="0,5"/>
                    
                    <TextBlock Grid.Row="1" Grid.Column="0" Text="Client:" VerticalAlignment="Center"/>
                    <TextBox Grid.Row="1" Grid.Column="1" Padding="5" Margin="0,5,10,5"/>
                    
                    <TextBlock Grid.Row="1" Grid.Column="2" Text="Location:" VerticalAlignment="Center"/>
                    <TextBox Grid.Row="1" Grid.Column="3" Padding="5" Margin="0,5"/>
                    
                    <TextBlock Grid.Row="2" Grid.Column="0" Text="Purchase Order:" VerticalAlignment="Center"/>
                    <TextBox Grid.Row="2" Grid.Column="1" Padding="5" Margin="0,5,10,5"/>
                    
                    <TextBlock Grid.Row="2" Grid.Column="2" Text="Item Number:" VerticalAlignment="Center"/>
                    <TextBox Grid.Row="2" Grid.Column="3" Padding="5" Margin="0,5"/>
                    
                    <TextBlock Grid.Row="3" Grid.Column="0" Text="Your Initials:" VerticalAlignment="Center"/>
                    <TextBox Grid.Row="3" Grid.Column="1" Padding="5" Margin="0,5,10,5"/>
                    
                    <TextBlock Grid.Row="3" Grid.Column="2" Text="Material:" VerticalAlignment="Center"/>
                    <ComboBox Grid.Row="3" Grid.Column="3" Margin="0,5">
                        <ComboBoxItem Content="A572_50"/>
                        <ComboBoxItem Content="A36"/>
                    </ComboBox>
                </Grid>
            </GroupBox>

        </StackPanel>
    </ScrollViewer>
</UserControl>
